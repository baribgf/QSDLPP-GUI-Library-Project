#ifndef QSDLPP_RADIOGROUP
#define QSDLPP_RADIOGROUP

#pragma once

#ifndef QSDLPP_RADIOBUTTON
    #include "RadioButton"
#endif

class RadioGroup
{
protected:
    vector<RadioButton *> radioMembers;

public:
    RadioGroup();
    ~RadioGroup();


    vector<RadioButton *> getMembers();
    void add(RadioButton *radioButton);
    void del(RadioButton *radioButton);
};

#endif
